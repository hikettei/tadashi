#! /usr/bin/bash

set -x
set -e

mkdir_ok_if_exists ()
{
    [ -e "$1" ] || mkdir -p "$1"
}

ROOT=$(pwd)
DOWNLOAD="${ROOT}/downloads"
OPT="${ROOT}/opt"
PATCH="${ROOT}/patches"
BUILD="${ROOT}/build"
mkdir_ok_if_exists "$DOWNLOAD"
mkdir_ok_if_exists "${OPT}"
mkdir_ok_if_exists "${PATCH}"
mkdir_ok_if_exists "${BUILD}"

LLVM_BRANCH="10.0.0"
LLVM_FILE="llvm-project-${LLVM_BRANCH}"
LLVM_PREFIX="${OPT}/${LLVM_FILE}"

